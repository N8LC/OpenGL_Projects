{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "OpenGL Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/First_Project/openglwin.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build active file",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe", // Adjust the path to gdb.exe as needed
            "internalConsoleOptions": "openOnSessionStart",
            "logging": {
                "moduleLoad": false,
                "programOutput": true,
                "engineLogging": false,
                "trace": false
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe"
            }
        }
    ]
}
